<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/hs_item2_heading"
        style="@style/homescreen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_item5"
        android:textColor="#808000" />

    <TextView
        android:id="@+id/hs_item2_dscr"
        style="@style/homescreen_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_item5_dscr"
        android:textColor="#808000" />

</LinearLayout>