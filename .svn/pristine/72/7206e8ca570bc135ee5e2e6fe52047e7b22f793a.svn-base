<header>
      <nav>
      <div class="container">
          <div class="row">
            <div class="col-xs-3" >
              <p class="liv-head-back-btm"><i class="fa fa-chevron-left">&nbsp;<a href="/#!/budget">Back</a></i></p>
            </div>
            <div class="col-xs-7">
              <p class="liv-head-heading">Estimate Budget</p>
            </div>
            <div class="col-xs-2" >
              <p class="liv-head-info-icon"><a href="javascript:void(0)" ng-click="setVal()">Next</a></p>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              
            </div>
            <div class="col-md-6 col-xs-12 liv-head-btm-text">
              <p class="text-center">Hey Steve ! You have $ 15,00,000 as per approved loan</p>
            </div>
            <div class="col-md-3">
              
            </div>
          </div>
        </div>
      </nav>
    </header>

    <section class="container liv-estimate-plan">
      <h4><p class="text-center">Whats your plan <i class="fa fa-info-circle"></i></p></h4>

        <div class="liv-radio">
          <h6>Applicant</h6>
          
            <input type="radio" name="applicant" id="single" class="radio-btn" ng-model="joinVal" ng-value="">
            <label for="single" id="single">Single</label> 
          
            
            <input type="radio" id="joint" name="applicant" class="radio-btn" ng-model="joinVal" ng-value="true">
            <label for="joint" id="jointApp">Joint Applicant</label>  
        </div> 
      
      <div class="liv-input">
        <h6>Estimate Mortgage amount</h6>
        <input type="text" name="mortgageAmount" ng-model="mortgage_amount" required>
      </div>

      <div>
        <h6>Mortgage terms (years)</h6>
        <input type="text" name="mortgageTerm" ng-model="mortgage_term" required>
      </div>
      
      <div>
        <h6>Enter your <span class="theme-lbl-text" ng-show="(joinVal==true)?true:false">first</span> THAI id</h6>
        <input type="text" name="mortgageTerm" ng-model="thaiId1">
      </div>
      
      <div ng-show="(joinVal==true)?true:false">
        <h6>Enter your second THAI id</h6>
        <input type="text" name="mortgageTerm" ng-model="thaiId2">
      </div>
    </section>
    
     <footer>
       <h6 class="text-center pull-down">Step 1 out of 3</h6>
     </footer>
