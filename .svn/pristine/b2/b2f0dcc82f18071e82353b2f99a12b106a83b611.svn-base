<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dashboard_menu_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_dashboard_menu_title"
        style="@style/homescreen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_item1"
        android:textColor="#808000" />

    <TextView
        android:id="@+id/tv_dashboard_menu_desc"
        style="@style/homescreen_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_item1_dscr"
        android:textColor="#808000" />

</LinearLayout>