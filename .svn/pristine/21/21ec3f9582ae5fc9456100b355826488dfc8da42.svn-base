//Debit Payement Styles

    .bottom{
border-bottom:solid 1px gray;
box-shadow:none;
padding-left:0px;
padding-right: 0px;
margin-right: 15px;
margin-left: 15px;
    }
.debit-body{
    padding-top: 40px;
    input {
        border: 0;
        outline: 0;
        box-shadow:none;
        background: transparent;
        border-bottom: 1px solid #CBCBCB;
        font-size: 16px;
    }
}
.debit-description{
    color: #8dc634;
   }

   .border-none{
       border: none;
       border-style: none;
       
       }
       .debit-margin{
           margin-top: -20px;
       }
      

       .form-ctrl{
        display: block;
        width: 100%;
        height: 26px;
       // padding: 2px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        
        background-image: none;
        border:none;
        border-radius: 2px;
        -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        outline:none;
    }
    .budget-headicon{
        color:orange;
    }
    .debit-marginbtm{
        margin-top:10px;
    }
    #desc::placeholder {
        color:#8dc634 ;
        opacity: 1;
        font-size: 16px;
    }
    .font-size{
        font-size: 16px;
    }
    ::placeholder{
        font-size: 16px;
        opacity:1;
        
    }
    .debit-desc{
        padding-top: 70px;
    }
       

       //end of Debit Payement Styles
