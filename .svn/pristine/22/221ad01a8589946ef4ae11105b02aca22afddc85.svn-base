<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".presentation.budgeting.EstimateBudgetSummary">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <TextView
            android:id="@+id/estimate_budget_summary_dummy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="Based on the information from you, we have calculated the monthly mortgage that you may have to pay " />

        <LinearLayout
            android:id="@+id/estimate_summary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/estimate_budget_summary_dummy_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@drawable/for_summary_budget"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Home Loan Mortgage"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/loan_mortgage_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="\u0E3F 2,222.22"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#8dc634">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Available in your account" />

            <TextView
                android:id="@+id/available_account_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="\u0E3F 3,566.66"
                android:textColor="#000"
                android:textSize="22sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/estimate_summary_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/whats_your_plan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:paddingLeft="5dp"
                            android:text="What's Your Plan"
                            android:textAllCaps="true"
                            android:textColor="#8dc634" />

                        <TextView
                            android:id="@+id/whats_your_plan_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:text="Edit"
                            android:textColor="#FFA500" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:paddingLeft="10dp"
                            android:text="Estimated Mortgage amount" />

                        <TextView
                            android:id="@+id/estimated_mortgage_amount_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:gravity="center"

                            android:textAllCaps="true"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:paddingLeft="10dp"
                            android:text="Mortgage term(year)" />

                        <TextView
                            android:id="@+id/mortgage_term_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:gravity="center"

                            android:textColor="#000" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/whats_your_income_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/whats_your_plan_layout"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:paddingLeft="5dp"
                            android:text="What's Your Income"
                            android:textAllCaps="true"
                            android:textColor="#8dc634" />

                        <TextView
                            android:id="@+id/whats_your_income_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:text="Edit"
                            android:textColor="#FFA500" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:paddingLeft="10dp"
                            android:text="Your Total Income" />

                        <TextView
                            android:id="@+id/your_total_income_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:gravity="center"

                            android:textAllCaps="true"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:paddingLeft="10dp"
                            android:text="Monthly Income" />

                        <TextView
                            android:id="@+id/mortgage_monthly_income"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:gravity="center"

                            android:textAllCaps="true"
                            android:textColor="#000" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/monthly_income_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/whats_your_income_layout"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:paddingLeft="5dp"
                            android:text="Monthly Expenses"
                            android:textAllCaps="true"
                            android:textColor="#8dc634" />

                        <TextView
                            android:id="@+id/monthly_income_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:text="Edit"
                            android:textColor="#FFA500" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:paddingLeft="10dp"
                            android:text="Your Total Expenses" />

                        <TextView
                            android:id="@+id/your_total_income_text_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:gravity="center"
                            android:text="\u0E3F 600"
                            android:textAllCaps="true"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:paddingLeft="10dp"
                            android:text="" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight=".4"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textAllCaps="true" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>

</FrameLayout>
